<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/entrance/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.license_plate}}" class="form-control" name="license_plate" placeholder="Placa" autofocus>
                        </div>
                      
                        <div class="form-group">
                            <input type="text" value="{{link.propietario}}" name="propietario" class="form-control" placeholder="Propietario">
                        </div>
                       
                        <div class="form-group">
                            <textarea name="novedades" rows="2" class="form-control" placeholder="Registrar novedad">{{link.novedades}}</textarea>
                        </div>
                      
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>                            
                        </div>  
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

